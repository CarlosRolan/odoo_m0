<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- TREE -->
        <record id="m0_gallery_view_tree" model="ir.ui.view">
            <field name="name">m0.gallery.view.tree</field>
            <field name="model">m0.gallery</field>
            <field name="arch" type="xml">
                <tree string="Galleries">
                    <field name="name" />
                    <field name="photo_ids" />
                    <field name="total_price" />
                </tree>
            </field>
        </record>

        <!-- FORM -->
        <record id="m0_gallery_view_form" model="ir.ui.view">
            <field name="name">m0.gallery.view.form</field>
            <field name="model">m0.gallery</field>
            <field name="arch" type="xml">
                <form string="Gallery">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="name" />
                            </group>
                            <group name="group_right">
                                <field name="photo_ids" />
                                <field name="total_price" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
